{
	"name": "prizm-monorepo",
	"version": "0.1.0",
	"private": true,
	"description": "Prizm monorepo - HTTP API server and Tauri desktop client",
	"workspaces": [
		"prizm",
		"prizm/panel",
		"prizm-client-core",
		"prizm-electron-client"
	],
	"scripts": {
		"install:all": "yarn install",
		"build": "yarn workspace @prizm/server build && yarn workspace @prizm/electron-client build",
		"build:server": "yarn workspace @prizm/server build",
		"build:electron": "yarn workspace @prizm/electron-client build",
		"dev:server": "yarn workspace @prizm/server dev",
		"dev:electron": "yarn workspace @prizm/electron-client dev",
		"clean": "yarn workspace @prizm/server clean",
		"start": "yarn workspace @prizm/server start",
		"test": "yarn workspace @prizm/server test"
	},
	"devDependencies": {
		"typescript": "^5.9.3"
	},
	"packageManager": "yarn@4.5.0",
	"keywords": [
		"prizm",
		"monorepo",
		"workspace"
	],
	"author": "Prizm Team",
	"license": "MIT"
}
