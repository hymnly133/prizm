{
  "name": "@prizm/server",
  "type": "module",
  "version": "0.1.0",
  "description": "Prizm efficiency server - HTTP API for sticky notes and notifications",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "prizm-server": "./dist/cli.js"
  },
  "files": [
    "dist",
    "assets",
    "panel/dist"
  ],
  "scripts": {
    "kill-port": "powershell -ExecutionPolicy Bypass -File scripts/kill-port.ps1",
    "clean:data": "node scripts/clean-data.mjs --all",
    "clean:memory": "node scripts/clean-data.mjs --memory",
    "clean:token": "node scripts/clean-data.mjs --token",
    "clean:sessions": "node scripts/clean-data.mjs --sessions",
    "build": "yarn workspace @prizm/shared build && tsup && yarn build:panel",
    "build:panel": "yarn --cwd panel build",
    "dev": "tsx watch src/cli.ts",
    "dev:panel": "yarn --cwd panel dev",
    "clean": "rm -rf dist",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:example": "node dist/example.js",
    "test:scope": "node scripts/scope-test.mjs",
    "test:scope:client": "node scripts/scope-test-client.mjs",
    "mcp:stdio": "node dist/mcp/stdio-bridge.js"
  },
  "keywords": [
    "prizm",
    "efficiency",
    "server",
    "notes",
    "notifications"
  ],
  "author": "Prizm Team",
  "license": "PolyForm-Noncommercial-1.0.0",
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.0",
    "@ai-sdk/google": "^2.0.0",
    "@ai-sdk/openai-compatible": "^2.0.0",
    "@huggingface/transformers": "^3.8.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@node-rs/jieba": "^2.0.1",
    "@prizm/evermemos": "workspace:*",
    "@vscode/ripgrep": "^1.17.0",
    "ai": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "emittery": "^1.2.0",
    "express": "^5.2.1",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "jsonrepair": "^3.13.0",
    "minisearch": "^7.0.0",
    "node-cron": "^4.2.1",
    "node-pty": "^1.1.0",
    "playwright": "^1.58.2",
    "uuid": "^13.0.0",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@prizm/shared": "workspace:*",
    "@types/compression": "^1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.3.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "supertest": "^7.2.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  }
}
