{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Prizm Notification Client",
  "version": "0.1.0",
  "identifier": "com.prizm.notification-client",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Prizm Notification Client",
        "width": 600,
        "height": 400,
        "resizable": true,
        "hiddenTitle": false,
        "titleBarStyle": "Visible",
        "center": true
      }
    ],
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "",
    "shortDescription": "Prizm WebSocket notification client",
    "longDescription": "A lightweight notification client that connects to Prizm Server via WebSocket and displays system notifications",
    "targets": "all"
  },
  "plugins": {}
}
